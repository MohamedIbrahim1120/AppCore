@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">

    <partial name="_notification" />

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="New" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp;  Add New Category
            </a>
        </div>

    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Category Name
                </th>
                <th scope="col">
                    Image
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @category.Name
                    </td>
                    <td>
                        <img src="@category.imageSrc" style="width:48px" class="img-thumbnail" />
                    </td>
                    <td>
                       <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-sm btn-success">
                           <i class="bi bi-pencil"></i>
                       </a>
                       &nbsp;
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

