@model Item
@{
    ViewData["Title"] = "New";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Item</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="categoryId"></label>
            <select asp-for="categoryId" style="color:black;" class="form-control" asp-items="@ViewBag.categoryList">
              
            </select>
            <span asp-validation-for="categoryId" class="text-danger"></span>
        </div>

        <div>
            <input type="file" asp-for="clientFile" onchange="loadfile(event)" />
            <img id="myImg"height="100px" />
        </div>

        <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">Back to Items</a>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var loadfile = function (event) { 
            var reader = new FileReader();
            reader.onload = function () { 
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
     
}