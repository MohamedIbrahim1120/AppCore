@model Item
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeleteItem">

    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="categoryId"></label>
                <select asp-for="categoryId" style="color:black;" disabled class="form-control" asp-items="@ViewBag.categoryList">
                </select>

            <span asp-validation-for="categoryId" class="text-danger"></span>

        </div>

        <div>
            <input type="file" asp-for="clientFile" disabled onchange="loadfile(event)" />
            <img id="myImg" height="100px" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">Back to Items</a>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}